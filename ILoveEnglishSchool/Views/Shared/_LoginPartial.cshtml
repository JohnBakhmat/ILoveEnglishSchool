@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User)) {
        <li class="nav-item">
            <a style=" border-color: #add681" class="nav-link text-dark btn btn-outline-success" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                <button style=" border-color: #add681" type="submit" class="nav-link btn btn-link text-dark btn btn-outline-success">Logout</button>
            </form>
        </li>
    }
    else {
        <li class="nav-item">
            <a class="nav-link text-dark btn btn-outline-success" style=" border-color: #add681" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark btn btn-outline-success" style=" border-color: #add681"  asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
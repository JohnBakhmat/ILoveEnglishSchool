@using Microsoft.EntityFrameworkCore.Internal
@model IEnumerable<ILoveEnglishSchool.Models.Part>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body style="justify-content: center;">
<h1 class="jumbotron" style="background: linear-gradient(43deg, #add681 0%, #bbedfb);color: rgb(0,0,0); height: 40px;justify-content: center; width: 100pc; margin-left: -10pc">
    Lesson @Model.First().LessonId â€“ @Model.First().Lesson.Level
</h1>
<p>
    <a asp-action="Create" class="btn" style="background-color: #add681;">Create Lesson</a>
</p>
<table class="table table-striped">
    <thead style="background-color: #bbdefb;">
        <tr>
            <th>
                Number
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                Topic
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lesson)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody style="background-color: #eeffff;">
    @{ var i = 1;}
    @if (Model.Count()!=0) {
        @foreach (var item in Model) {
            <tr>
                <td class="text-danger font-weight-bold">
                    <p>Part @i</p>
                </td>
                <td class="text-success font-weight-bold">
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td class="text-danger font-weight-bold">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-danger font-weight-bold">
                    Lesson @Html.DisplayFor(modelItem => item.Lesson.LessonId)
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.PartId" class="btn" style="background-color: #add681;">Choose</a> |
                    <a asp-action="Edit" asp-route-id="@item.PartId" class="btn" style="background-color: #8aacc8;">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.PartId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            i++;
        }
    }
    </tbody>
</table>
</body>
</html>
